{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "app/api/**/route.js": { "runtime": "nodejs20.x", "maxDuration": 30 },
    "app/api/**/route.ts": { "runtime": "nodejs20.x", "maxDuration": 30 }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*\.(js|css|woff2?|png|jpe?g|gif|svg|webp|avif|ico))$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": { "NODE_VERSION": "20.x" }
}
